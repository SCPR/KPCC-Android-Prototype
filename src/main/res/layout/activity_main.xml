<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.sothree.slidinguppanel.SlidingUpPanelLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:sothree="http://schemas.android.com/apk/res-auto"
                android:id="@+id/audio_slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                sothree:collapsedHeight="68dp"
                sothree:shadowHeight="4dp"
                sothree:dragView="@+id/audio_title">

                <!-- Main Content -->
                <FrameLayout
                    android:id="@+id/content_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="?android:attr/actionBarSize" />

                <!-- Slide page -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eee"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="false">

                    <!-- Drag content (Audio Bar) -->
                    <LinearLayout
                        android:id="@+id/audio_bar"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@id/audio_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:padding="5dp"
                            android:gravity="left"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:text="Live Stream" />

                        <LinearLayout
                            android:id="@+id/media_control"
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:orientation="horizontal"
                            android:layout_gravity="right"
                            android:gravity="right|center">

                            <ImageButton
                                android:id="@+id/audio_btn_play"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@null"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_media_play" />

                            <ImageButton
                                android:id="@+id/audio_btn_next"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:background="@null"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_media_next" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Audio page content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Hello" />

                    </LinearLayout>

                </LinearLayout>

            </com.sothree.slidinguppanel.SlidingUpPanelLayout>

        </FrameLayout>

        <include layout="@layout/drawer_list" />

    </android.support.v4.widget.DrawerLayout>

</FrameLayout>
