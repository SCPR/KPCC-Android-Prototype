<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/white"
            android:text="ARTICLE TITLE"
            android:lineSpacingMultiplier="1"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/article_asset_ImageView"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@android:color/background_dark"
            android:contentDescription="ASSET" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:background="@android:color/background_dark">

            <TextView
                android:id="@+id/article_byline_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:text="ARTICLE BYLINE" />

            <TextView
                android:id="@+id/article_timestamp_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/article_byline_TextView"
                android:gravity="right"
                android:textStyle="italic"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:text="ARTICLE TIMESTAMP" />

        </RelativeLayout>

        <TextView
            android:id="@+id/article_body_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:text="ARTICLE BODY" />

    </LinearLayout>

</ScrollView>
