<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="ARTICLE TITLE"
            android:lineSpacingMultiplier="1"
            android:textSize="30sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/article_byline_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="ARTICLE BYLINE" />

            <TextView
                android:id="@+id/article_timestamp_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/article_byline_TextView"
                android:gravity="right"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="ARTICLE TIMESTAMP" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/article_asset_ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="ASSET"/>

        <TextView
            android:id="@+id/article_body_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:text="ARTICLE BODY" />

    </LinearLayout>

</ScrollView>
